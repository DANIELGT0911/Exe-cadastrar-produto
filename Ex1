import java.util.Scanner;

class ListaArrayString {
    private String[] array;
    private int tamanho;

    public ListaArrayString(int capacidade) {
        this.array = new String[capacidade];
        this.tamanho = 0;
    }

    public void adicionar(String elemento) {
        if (tamanho == array.length) {
            System.out.println("Erro: Lista cheia!");
            return;
        }
        array[tamanho++] = elemento;
    }

    public void remover(int posicao) {
        if (posicao < 0 || posicao >= tamanho) {
            System.out.println("Erro: Posição inválida!");
            return;
        }
        for (int i = posicao; i < tamanho - 1; i++) {
            array[i] = array[i + 1];
        }
        tamanho--;
    }

    public boolean buscar(String nome) {
        for (int i = 0; i < tamanho; i++) {
            if (array[i].equalsIgnoreCase(nome)) {
                return true;
            }
        }
        return false;
    }

    public void imprimirLista() {
        System.out.print("Lista de Nomes: ");
        for (int i = 0; i < tamanho; i++) {
            System.out.print(array[i] + " ");
        }
        System.out.println();
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ListaArrayString lista = new ListaArrayString(5);

        System.out.println("Quantos nomes deseja adicionar?");
        int n = scanner.nextInt();
        scanner.nextLine(); // Consumir quebra de linha

        for (int i = 0; i < n; i++) {
            System.out.println("Digite um nome:");
            String nome = scanner.nextLine();
            lista.adicionar(nome);
        }

        lista.imprimirLista();

        System.out.println("Digite um nome para buscar:");
        String nomeBusca = scanner.nextLine();
        if (lista.buscar(nomeBusca)) {
            System.out.println("Nome encontrado na lista.");
        } else {
            System.out.println("Nome não encontrado.");
        }

        System.out.println("Digite a posição do nome a ser removido:");
        int posicao = scanner.nextInt();
        lista.remover(posicao);

        lista.imprimirLista();
        scanner.close();
    }
} 
